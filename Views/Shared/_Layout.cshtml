<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LandingPage</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LandingPage.styles.css" asp-append-version="true" />
</head>
<body style="padding-bottom: 100px;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow navbar fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand fs-3" asp-area="" asp-controller="Home" asp-action="Index">PedalPulse</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#Products">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#Services">Services</a>
                        </li>
                        <li class="nav-item"></li>
                            <a class="nav-link text-dark" href="#BuyNow">Buy Now</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-light text-muted fixed-bottom py-2">
        <div class="container-sm text-center medium">
            <span>Contact Us: </span>
            <span>Phone: <a href="tel:+123457891">123-456-7891</a>&nbsp; | &nbsp;</span>
            <span>Email: <a href="mailto:PedalPulseSupport@gmail.com">PedalPulseSupport@gmail.com</a></span>
            <div>
                <span>Socials : PedalPulse</span>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
